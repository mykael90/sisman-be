{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [{
      "include": "templates/**/*",
      "outDir": "dist"
    },
    {
      "include": "../prisma/generated/client/**/*",
      "outDir": "dist/prisma/generated/client",   
      "watchAssets": true 
    },
    {
      "include": "../prisma/schema.prisma",
      "outDir": "dist/prisma",
      "watchAssets": false
    }]
  }
}
